<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txvInfo1"
        android:text="Bluetooth Controlled Smart Home"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@id/txvInfo1"
        android:layout_marginTop="5sp"
        android:background="@color/purple_200"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvInfo1"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txvSwitch1"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Switch 1"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout2"
        android:layout_below="@id/layout1"
        android:layout_marginTop="10sp"
        android:weightSum="2">
        <TextView
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:id="@+id/txvSwitch2"
            android:text="Switch 2"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:gravity="center"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch2"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout3"
        android:layout_below="@id/layout2"
        android:layout_marginTop="10sp"
        android:weightSum="2">
        <TextView
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:id="@+id/txvSwitch3"
            android:text="Switch 3"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:gravity="center"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch3"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout4"
        android:layout_below="@id/layout3"
        android:layout_marginTop="10sp"
        android:weightSum="2">
        <TextView
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:id="@+id/txvSwitch4"
            android:text="Switch 4"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:gravity="center"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch4"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout5"
        android:layout_below="@id/layout4"
        android:layout_marginTop="10sp"
        android:weightSum="2" android:visibility="gone">
        <TextView
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:id="@+id/txvSwitchAll"
            android:text="All Switches"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:gravity="center"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchAll"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>


</RelativeLayout>
